@model SmartMeds.Data.Entities.Hospital

<h2>@Model.Name</h2>
<p><strong>City:</strong> @Model.City</p>
<p><strong>Address:</strong> @Model.Address</p>

<h3 class="mt-4">Requests for this hospital</h3>

@if (Model.Requests == null || !Model.Requests.Any())
{
<p>No requests found.</p>
}
else
{
<table class="table table-bordered">
    <thead>
        <tr>
            <th>From</th>
            <th>Medicine</th>
            <th>Quantity</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Requests)
        {
        <tr>
            <td>@r.FromHospital?.Name</td>
            <td>@r.Medicine?.Name</td>
            <td>@r.Quantity</td>
            <td>@r.Status</td>
        </tr>
        }
    </tbody>
</table>
}
