@model IEnumerable<SmartMeds.Data.Entities.Hospital>

    <h2 class="mb-3">Hospitals</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>City</th>
                <th>Address</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var h in Model)
    {
            <tr>
                <td>@h.Name</td>
                <td>@h.City</td>
                <td>@h.Address</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/Hospital/Details/@h.Id">Details</a>
                </td>
            </tr>
    }
        </tbody>
    </table>

