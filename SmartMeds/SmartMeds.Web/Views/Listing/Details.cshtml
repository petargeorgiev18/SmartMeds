@model ListingViewModel

<div class="container mt-4">
    <div class="card shadow-sm border-0" style="border-radius:12px; background-color:#f4f9f9;">
        <div class="card-header" style="background-color:#a2d5f2; color:#004080; border-radius:12px 12px 0 0;">
            <h3 class="mb-0">Listing Details</h3>
        </div>
        <div class="card-body">
            <p><strong>Medicine:</strong> @Model.MedicineName</p>
            <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
        </div>
        <div class="card-footer d-flex gap-2">
            <a href="/Listing" class="btn btn-secondary">Back</a>
            <a href="/Listing/Edit/@Model.Id" class="btn btn-outline-warning">Edit</a>
            <a href="/Listing/Delete/@Model.Id" class="btn btn-outline-danger">Delete</a>
        </div>
    </div>
</div>
