@model IEnumerable<ListingViewModel>

<div class="container mt-4">
    <h2>Listings for Selected Medicine</h2>

    <a href="/Listing" class="btn btn-secondary mb-3">Back to All Listings</a>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No listings found for this medicine.</div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Medicine</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var l in Model)
                {
                    <tr>
                        <td>@l.MedicineName</td>
                        <td>@l.Price.ToString("C")</td>
                        <td>
                            <a class="btn btn-sm btn-primary" href="/Listing/Details/@l.Id">Details</a>
                            <a class="btn btn-sm btn-warning" href="/Listing/Edit/@l.Id">Edit</a>
                            <a class="btn btn-sm btn-danger" href="/Listing/Delete/@l.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
