@model CreateListingViewModel

@{
    ViewData["Title"] = "Create Listing";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0" style="border-radius:12px; background-color:#f4f9f9;">
        <div class="card-header" style="background-color:#a2d5f2; color:#004080; border-radius:12px 12px 0 0;">
            <h3 class="mb-0">Create Listing</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="MedicineId" class="form-label">Medicine</label>
                    <select asp-for="MedicineId" class="form-select" asp-items="Model.MedicineOptions">
                        <option value="">-- Select Medicine --</option>
                    </select>
                    <span asp-validation-for="MedicineId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Price (lv)</label>
                    <input asp-for="Price" class="form-control" placeholder="Enter price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">Create</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>
