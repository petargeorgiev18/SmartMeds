@model IEnumerable<ListingViewModel>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Listings</h2>
        <a class="btn btn-success" href="/Listing/Create">Add New Listing</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Medicine</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var l in Model)
                {
                    <tr>
                        <td>@l.MedicineName</td>
                        <td>@l.Price.ToString("C")</td>
                        <td>
                            <a class="btn btn-sm btn-primary" href="/Listing/Details/@l.Id">Details</a>
                            <a class="btn btn-sm btn-warning" href="/Listing/Edit/@l.Id">Edit</a>
                            <a class="btn btn-sm btn-danger" href="/Listing/Delete/@l.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No listings available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
