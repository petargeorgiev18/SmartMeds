@model AddMedicineViewModel

<div class="container mt-5">
    <div class="card add-medicine-card shadow-sm">
        <div class="card-header">
            <h3>Add Medicine</h3>
        </div>
        <div class="card-body">

            <form asp-action="Add" method="post">

                <div class="form-group mb-3">
                    <label asp-for="Quantity" class="form-label">Quantity</label>
                    <input asp-for="Quantity" class="form-control custom-input" placeholder="Enter quantity" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ExpirationDate" class="form-label">Expiration Date</label>
                    <input asp-for="ExpirationDate" type="date" class="form-control custom-input" />
                    <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImageUrl" class="form-label">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control custom-input" placeholder="Enter image URL" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-soft-gradient mt-3">Add Medicine</button>
            </form>
        </div>
    </div>
</div>

<style>
    /* Card Styling */
    .add-medicine-card {
        border-radius: 16px;
        overflow: hidden;
        background: #fafafa;
        border: 1px solid #e0e0e0;
        transition: transform 0.2s, box-shadow 0.3s;
    }

        .add-medicine-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.08);
        }

        .add-medicine-card .card-header {
            background: #f5f5f5;
            color: #37474f;
            font-weight: 600;
            font-size: 1.25rem;
            text-align: center;
            border-bottom: 1px solid #e0e0e0;
            padding: 15px;
        }

    /* Inputs */
    .custom-input {
        border-radius: 12px;
        border: 1px solid #cfd8dc;
        padding: 10px;
        background: #ffffff;
        transition: 0.2s;
    }

        .custom-input:focus {
            border-color: #90a4ae;
            box-shadow: 0 0 6px rgba(144,164,174,0.3);
            outline: none;
        }

    /* Select Dropdown */
    .custom-select {
        border-radius: 12px;
        padding: 10px;
        border: 1px solid #cfd8dc;
        background: #ffffff;
        transition: 0.2s;
    }

        .custom-select:focus {
            border-color: #90a4ae;
            box-shadow: 0 0 6px rgba(144,164,174,0.3);
            outline: none;
        }

    /* Button Gradient */
    .btn-soft-gradient {
        background: linear-gradient(120deg, #e0f2f1, #f1f8e9);
        color: #37474f;
        font-weight: 600;
        border-radius: 12px;
        border: none;
        transition: 0.3s;
    }

        .btn-soft-gradient:hover {
            background: linear-gradient(120deg, #c8e6c9, #b2dfdb);
            color: #263238;
            transform: scale(1.03);
        }

    /* Text Colors */
    label {
        font-weight: 500;
        color: #37474f;
    }

    .text-danger {
        font-size: 0.85rem;
    }
</style>
