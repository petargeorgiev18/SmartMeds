@model AddMedicineViewModel

<div class="container mt-5">
    <div class="card add-medicine-card shadow-sm">
        <div class="card-header">
            <h3>Add Medicine</h3>
        </div>
        <div class="card-body">

            <form asp-action="Add" method="post">

                <div class="form-group mb-3">
                    <label asp-for="Quantity" class="form-label">Quantity</label>
                    <input asp-for="Quantity" class="form-control custom-input" placeholder="Enter quantity" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ExpirationDate" class="form-label">Expiration Date</label>
                    <input asp-for="ExpirationDate" type="date" class="form-control custom-input" />
                    <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImageUrl" class="form-label">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control custom-input" placeholder="Enter image URL" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <input asp-for="ExternalMedicineId" value="-1" hidden/>

                <button type="submit" class="btn btn-gradient mt-3">Add Medicine</button>
            </form>
        </div>
    </div>
</div>

<style>
    /* Card Styling */
    .add-medicine-card {
        border-radius: 16px;
        overflow: hidden;
        background: linear-gradient(145deg, #e0f7fa, #ffffff);
        border: none;
        transition: transform 0.2s, box-shadow 0.3s;
    }

        .add-medicine-card:hover {
            transform: translateY(-5px) scale(1.01);
            box-shadow: 0 12px 30px rgba(0,0,0,0.15);
        }

        .add-medicine-card .card-header {
            background: linear-gradient(90deg, #26c6da, #00acc1);
            color: #fff;
            font-weight: 600;
            font-size: 1.25rem;
            text-align: center;
            border-radius: 16px 16px 0 0;
            padding: 15px;
        }

    /* Inputs */
    .custom-input {
        border-radius: 12px;
        border: 1px solid #b0bec5;
        padding: 10px;
        transition: 0.2s;
    }

        .custom-input:focus {
            border-color: #26c6da;
            box-shadow: 0 0 8px rgba(38,198,218,0.4);
            outline: none;
        }

    /* Select Dropdown */
    .custom-select {
        border-radius: 12px;
        padding: 10px;
        border: 1px solid #b0bec5;
        transition: 0.2s;
    }

        .custom-select:focus {
            border-color: #26c6da;
            box-shadow: 0 0 8px rgba(38,198,218,0.4);
            outline: none;
        }

    /* Button Gradient */
    .btn-gradient {
        background: linear-gradient(90deg, #26c6da, #00acc1);
        color: #fff;
        font-weight: 600;
        border-radius: 12px;
        transition: 0.3s;
    }

        .btn-gradient:hover {
            background: linear-gradient(90deg, #00acc1, #26c6da);
            color: #fff;
            transform: scale(1.05);
        }
</style>
