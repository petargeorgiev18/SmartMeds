@model IEnumerable<SmartMeds.Web.Models.MedicineViewModel>
@{
    var days = ViewBag.DaysThreshold;
}

<h2>Medicines close to expiration (within @days days)</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>External ID</th>
            <th>Quantity</th>
            <th>Expiration</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.ExternalMedicineId</td>
                <td>@m.Quantity</td>
                <td>@m.ExpirationDate.ToShortDateString()</td>
                <td>@m.Status</td>
            </tr>
        }
    </tbody>
</table>