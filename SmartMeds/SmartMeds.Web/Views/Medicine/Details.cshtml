@model MedicineViewModel

<div class="container mt-4">
    <div class="card shadow-sm border-0" style="border-radius:12px; background-color:#f4f9f9;">
        <div class="card-header" style="background-color:#a2d5f2; color:#004080; border-radius:12px 12px 0 0;">
            <h3 class="mb-0">Medicine Details</h3>
        </div>
        <div class="card-body">
            <p><strong>Barcode:</strong> @Model.ExternalMedicineId</p>
            <p><strong>Quantity:</strong> @Model.Quantity</p>
            <p><strong>Expiration:</strong> @Model.ExpirationDate.ToShortDateString()</p>
            <p>
                <strong>Status:</strong>
                @switch (Model.Status)
                {
                    case StockStatus.Expired:
                        <span class="badge" style="background-color:#f8d7da; color:#842029;">Expired</span>
                        ;
                        break;
                    case StockStatus.CloseToExpiration:
                        <span class="badge" style="background-color:#fff3cd; color:#856404;">Close to Expiration</span>
                        ;
                        break;
                    case StockStatus.Good:
                        <span class="badge" style="background-color:#d1e7dd; color:#0f5132;">In Stock</span>
                        ;
                        break;
                }
            </p>
        </div>
        <div class="card-footer d-flex gap-2">
            <a class="btn btn-secondary" href="/Medicine">Back</a>
            <a class="btn btn-outline-warning" href="/Medicine/Edit/@Model.Id">Edit</a>
            <a class="btn btn-outline-danger" href="/Medicine/Delete/@Model.Id">Delete</a>
        </div>
    </div>
</div>
