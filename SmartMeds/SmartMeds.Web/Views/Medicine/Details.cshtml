@model MedicineViewModel

<div class="container mt-4">
    <div class="card medicine-card shadow-sm border-0">
        <div class="card-header card-header-status">
            <h3 class="mb-0">Medicine Details</h3>
        </div>
        <div class="card-body">
            <p><strong>Barcode:</strong> @Model.ExternalMedicineId</p>
            <p><strong>Quantity:</strong> @Model.Quantity</p>
            <p><strong>Expiration:</strong> @Model.ExpirationDate.ToShortDateString()</p>
            <p>
                <strong>Status:</strong>
                @switch (Model.Status)
                {
                    case StockStatus.Expired:
                        <span class="badge status-badge expired" title="This medicine has expired ❌">❌ Expired</span>
                        ;
                        break;
                    case StockStatus.CloseToExpiration:
                        <span class="badge status-badge warning" title="Expires soon ⚠️">⚠️ Close to Expiration</span>
                        ;
                        break;
                    case StockStatus.Good:
                        <span class="badge status-badge good" title="Medicine in stock ✅">✅ In Stock</span>
                        ;
                        break;
                }
            </p>
        </div>
        <div class="card-footer d-flex gap-2">
            <a class="btn btn-secondary btn-sm" href="/Medicine">Back</a>
            <a class="btn btn-outline-warning btn-sm" href="/Medicine/Edit/@Model.Id">Edit</a>
            <a class="btn btn-outline-danger btn-sm" href="/Medicine/Delete/@Model.Id">Delete</a>
        </div>
    </div>
</div>

<style>
    /* Card Styling */
    .medicine-card {
        border-radius: 12px;
        background-color: #f4f9f9;
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .medicine-card:hover {
            transform: translateY(-5px) scale(1.02);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }

    /* Header Styling */
    .card-header-status {
        background-color: #a2d5f2;
        color: #004080;
        border-radius: 12px 12px 0 0;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    /* Badge Styling */
    .status-badge {
        padding: 5px 10px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.9rem;
    }

        .status-badge.expired {
            background-color: #f8d7da;
            color: #842029;
        }

        .status-badge.warning {
            background-color: #fff3cd;
            color: #856404;
        }

        .status-badge.good {
            background-color: #d1e7dd;
            color: #0f5132;
        }

    /* Button Hover Animations */
    .btn-outline-warning:hover {
        background-color: #ffe58f;
        color: #856404;
        transition: 0.2s;
    }

    .btn-outline-danger:hover {
        background-color: #f5c2c7;
        color: #842029;
        transition: 0.2s;
    }

    .btn-secondary:hover {
        background-color: #cfd9e0;
        transition: 0.2s;
    }
</style>
