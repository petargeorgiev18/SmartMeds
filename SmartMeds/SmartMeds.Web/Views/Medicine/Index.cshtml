@model IEnumerable<MedicineViewModel>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 style="color:#004080;">Medicines Dashboard</h2>
        <a class="btn btn-gradient" href="/Medicine/Add">Add New Medicine</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No medicines available.</div>
    }
    else
    {
        <div class="grid-container">
            @foreach (var m in Model)
            {
                var statusColor = m.Status == StockStatus.Expired ? "#f28b82" :
                m.Status == StockStatus.CloseToExpiration ? "#fdd663" :
                "#81c995";

                var statusIcon = m.Status == StockStatus.Expired ? "❌" :
                m.Status == StockStatus.CloseToExpiration ? "⚠️" :
                "✅";

                <div class="medicine-card">
                    <div class="card-header" style="background:@statusColor;">
                        <h5>@m.Name</h5>
                        <span class="status-icon">@statusIcon</span>
                    </div>
                    <div class="card-body">
                        <p><strong>Quantity:</strong> @m.Quantity</p>
                        <p><strong>Expiration:</strong> @m.ExpirationDate.ToShortDateString()</p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary btn-sm" href="/Medicine/Details/@m.Id">Details</a>
                        <a class="btn btn-warning btn-sm" href="/Medicine/Edit/@m.Id">Edit</a>
                        <a class="btn btn-danger btn-sm" href="/Medicine/Delete/@m.Id">Delete</a>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
    }

    .medicine-card {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 6px 15px rgba(0,0,0,0.1);
        transition: transform 0.2s, box-shadow 0.2s;
        background: #f9fafa;
    }

        .medicine-card:hover {
            transform: translateY(-5px) scale(1.02);
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        }

    .card-header {
        padding: 10px;
        color: white;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .status-icon {
        font-size: 1.2em;
    }

    .card-body {
        padding: 10px;
    }

    .card-footer {
        display: flex;
        justify-content: space-around;
        padding: 10px;
        background: #f1f1f1;
    }

    .btn-gradient {
        background: linear-gradient(90deg, #36d1dc, #5b86e5);
        color: white;
        border: none;
        transition: background 0.3s;
    }

        .btn-gradient:hover {
            background: linear-gradient(90deg, #5b86e5, #36d1dc);
        }
</style>
