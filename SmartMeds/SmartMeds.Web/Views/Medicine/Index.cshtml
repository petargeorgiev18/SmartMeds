@model IEnumerable<MedicineViewModel>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 style="color:#2c3e50;">Medicines Dashboard</h2>
        <a class="btn btn-soft" href="/Medicine/Add">Add New Medicine</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No medicines available.</div>
    }
    else
    {
        <div class="grid-container">
            @foreach (var m in Model)
            {
                var statusColor = m.Status == StockStatus.Expired ? "#fcdada" :
                m.Status == StockStatus.CloseToExpiration ? "#fff5cc" :
                "#d5f5e3";

                var statusIcon = m.Status == StockStatus.Expired ? "❌" :
                m.Status == StockStatus.CloseToExpiration ? "⚠️" :
                "✅";

                <div class="medicine-card">
                    <div class="card-header" style="background:@statusColor;">
                        <h5>@m.Name</h5>
                        <span class="status-icon">@statusIcon</span>
                    </div>
                    <div class="card-body">
                        <p><strong>Quantity:</strong> @m.Quantity</p>
                        <p><strong>Expiration:</strong> @m.ExpirationDate.ToShortDateString()</p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary btn-sm" href="/Medicine/Details/@m.Id">Details</a>
                        <a class="btn btn-warning btn-sm" href="/Medicine/Edit/@m.Id">Edit</a>
                        <a class="btn btn-danger btn-sm" href="/Medicine/Delete/@m.Id">Delete</a>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        gap: 22px;
    }

    .medicine-card {
        border-radius: 14px;
        overflow: hidden;
        box-shadow: 0 6px 18px rgba(0,0,0,0.08);
        transition: transform 0.25s, box-shadow 0.25s;
        background: #ffffff;
    }

        .medicine-card:hover {
            transform: translateY(-5px) scale(1.02);
            box-shadow: 0 12px 25px rgba(0,0,0,0.12);
        }

    .card-header {
        padding: 12px;
        color: #2c3e50;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-weight: 600;
        font-size: 1.1rem;
    }

    .status-icon {
        font-size: 1.2em;
    }

    .card-body {
        padding: 14px;
        color: #34495e;
    }

        .card-body p {
            margin-bottom: 6px;
        }

    .card-footer {
        display: flex;
        justify-content: space-around;
        padding: 10px;
        background: #f4f6f8;
        border-top: 1px solid #e0e0e0;
    }

    /* Soft Button */
    .btn-soft {
        background: linear-gradient(90deg, #f0f4f8, #d9e2ec);
        color: #2c3e50;
        border: none;
        font-weight: 500;
        border-radius: 8px;
        padding: 8px 18px;
        transition: all 0.3s;
    }

        .btn-soft:hover {
            background: linear-gradient(90deg, #d9e2ec, #f0f4f8);
            transform: scale(1.05);
            color: #1b2b38;
        }

    .btn-primary, .btn-warning, .btn-danger {
        font-weight: 500;
        border-radius: 6px;
    }
</style>
