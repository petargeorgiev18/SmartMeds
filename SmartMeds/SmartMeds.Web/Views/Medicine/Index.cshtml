@model IEnumerable<MedicineViewModel>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Medicines</h2>
        <a class="btn btn-success" href="/Medicine/Add">Add New Medicine</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No medicines available.</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var m in Model)
            {
                <div class="col-md-4">
                    <div class="card shadow-sm border-0" style="border-radius:12px; background-color:#f4f9f9;">
                        <div class="card-body">
                            <h5 class="card-title">ID: @m.ExternalMedicineId</h5>
                            <p><strong>Quantity:</strong> @m.Quantity</p>
                            <p><strong>Expiration:</strong> @m.ExpirationDate.ToShortDateString()</p>
                            <p>
                                <strong>Status:</strong>
                                @switch (m.Status)
                                {
                                    case StockStatus.Expired:
                                        <span class="badge" style="background-color:#f8d7da; color:#842029;">Expired</span>
                                        ;
                                        break;
                                    case StockStatus.CloseToExpiration:
                                        <span class="badge" style="background-color:#fff3cd; color:#856404;">Close to Expiration</span>
                                        ;
                                        break;
                                    case StockStatus.Good:
                                        <span class="badge" style="background-color:#d1e7dd; color:#0f5132;">In Stock</span>
                                        ;
                                        break;
                                }
                            </p>
                            <div class="d-flex gap-2 mt-2">
                                <a class="btn btn-sm btn-outline-primary" href="/Medicine/Details/@m.Id">Details</a>
                                <a class="btn btn-sm btn-outline-warning" href="/Medicine/Edit/@m.Id">Edit</a>
                                <a class="btn btn-sm btn-outline-danger" href="/Medicine/Delete/@m.Id">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
