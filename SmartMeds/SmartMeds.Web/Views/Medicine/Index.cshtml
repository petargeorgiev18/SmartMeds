@model IEnumerable<MedicineViewModel>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 style="color:#2c3e50;">Medicines Dashboard</h2>
        <a class="btn btn-soft" href="/Medicine/Add">Add New Medicine</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No medicines available.</div>
    }
    else
    {
        <div class="grid-container">
            @foreach (var m in Model)
            {
                var statusColor = m.Status == StockStatus.Expired ? "#f4e3e3" :
                m.Status == StockStatus.CloseToExpiration ? "#fff8e1" :
                "#e3f4e3";

                var statusIcon = m.Status == StockStatus.Expired ? "❌" :
                m.Status == StockStatus.CloseToExpiration ? "⚠️" :
                "✅";

                <div class="medicine-card">
                    <div class="card-header" style="background:@statusColor;">
                        <h5>@m.Name</h5>
                        <span class="status-icon">@statusIcon</span>
                    </div>
                    <div class="card-body">
                        <p><strong>Quantity:</strong> @m.Quantity</p>
                        <p><strong>Expiration:</strong> @m.ExpirationDate.ToShortDateString()</p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-soft-action" href="/Medicine/Details/@m.Id">Details</a>
                        <a class="btn btn-soft-action" href="/Medicine/Edit/@m.Id">Edit</a>
                        <a class="btn btn-soft-action" href="/Medicine/Delete/@m.Id">Delete</a>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        gap: 22px;
    }

    .medicine-card {
        border-radius: 14px;
        overflow: hidden;
        box-shadow: 0 4px 14px rgba(0,0,0,0.06);
        transition: transform 0.25s, box-shadow 0.25s;
        background: #ffffff;
    }

        .medicine-card:hover {
            transform: translateY(-4px) scale(1.01);
            box-shadow: 0 12px 24px rgba(0,0,0,0.1);
        }

    .card-header {
        padding: 12px;
        color: #2c3e50;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-weight: 600;
        font-size: 1.1rem;
        border-bottom: 1px solid #e0e0e0;
    }

    .status-icon {
        font-size: 1.2em;
    }

    .card-body {
        padding: 14px;
        color: #34495e;
    }

        .card-body p {
            margin-bottom: 6px;
        }

    .card-footer {
        display: flex;
        justify-content: space-around;
        padding: 10px;
        background: #fafafa;
        border-top: 1px solid #e0e0e0;
    }

    /* Soft Buttons */
    .btn-soft {
        background: #f5f7fa;
        color: #2c3e50;
        border: 1px solid #d1d9e0;
        font-weight: 500;
        border-radius: 6px;
        padding: 8px 18px;
        transition: all 0.3s;
    }

        .btn-soft:hover {
            background: #e0e6eb;
            transform: scale(1.03);
            color: #1b2b38;
        }

    .btn-soft-action {
        background: #f5f5f5;
        border: 1px solid #dcdcdc;
        color: #2c3e50;
        border-radius: 6px;
        padding: 4px 12px;
        font-size: 0.9rem;
        transition: all 0.2s;
    }

        .btn-soft-action:hover {
            background: #e6e6e6;
            transform: scale(1.05);
        }
</style>
