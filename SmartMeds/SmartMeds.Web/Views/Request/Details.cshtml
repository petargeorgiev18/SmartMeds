@model RequestViewModel

<div class="container mt-4">
    <div class="card shadow-sm border-0" style="border-radius:12px; background-color:#f4f9f9;">
        <div class="card-header" style="background-color:#a2d5f2; color:#004080; border-radius:12px 12px 0 0;">
            <h3 class="mb-0">Request Details</h3>
        </div>
        <div class="card-body">
            <p><strong>From:</strong> @Model.FromHospitalName</p>
            <p><strong>To:</strong> @Model.ToHospitalName</p>
            <p><strong>Medicine:</strong> @Model.MedicineName</p>
            <p>
                <strong>Status:</strong>
                @switch (Model.Status)
                {
                    case RequestStatus.Pending:
                        <span class="badge" style="background-color:#fff3cd; color:#856404;">Pending</span>
                        ;
                        break;
                    case RequestStatus.Completed:
                        <span class="badge" style="background-color:#d1e7dd; color:#0f5132;">Approved</span>
                        ;
                        break;
                    case RequestStatus.Declined:
                        <span class="badge" style="background-color:#f8d7da; color:#842029;">Rejected</span>
                        ;
                        break;
                }
            </p>
        </div>
        <div class="card-footer d-flex gap-2">
            <a class="btn btn-secondary" href="/Request">Back</a>
            <a class="btn btn-outline-warning" href="/Request/Edit/@Model.Id">Edit</a>
            <a class="btn btn-outline-danger" href="/Request/Delete/@Model.Id">Delete</a>
        </div>
    </div>
</div>
