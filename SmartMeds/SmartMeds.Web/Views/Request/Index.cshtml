@model IEnumerable<RequestViewModel>

<div class="container mt-4">
    <h2 class="mb-4">Requests</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No requests found.</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var r in Model)
            {
                <div class="col-md-4">
                    <div class="card shadow-sm border-0" style="border-radius:12px; background-color:#f4f9f9;">
                        <div class="card-body">
                            <p><strong>From:</strong> @r.FromHospitalName</p>
                            <p><strong>To:</strong> @r.ToHospitalName</p>
                            <p><strong>Created On:</strong> @r.CreatedOn.ToShortDateString()</p>
                            <p>
                                <strong>Status:</strong>
                                @switch (r.Status)
                                {
                                    case RequestStatus.Pending:
                                        <span class="badge" style="background-color:#fff3cd; color:#856404;">Pending</span>
                                        ;
                                        break;
                                    case RequestStatus.Accepted:
                                        <span class="badge" style="background-color:#d1e7dd; color:#0f5132;">Approved</span>
                                        ;
                                        break;
                                    case RequestStatus.Declined:
                                        <span class="badge" style="background-color:#f8d7da; color:#842029;">Rejected</span>
                                        ;
                                        break;
                                }
                            </p>
                            <div class="d-flex gap-2 mt-2">
                                <a class="btn btn-sm btn-outline-primary" href="/Request/Details/@r.Id">Details</a>
                                <a class="btn btn-sm btn-outline-warning" href="/Request/Edit/@r.Id">Edit</a>
                                <a class="btn btn-sm btn-outline-danger" href="/Request/Delete/@r.Id">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
