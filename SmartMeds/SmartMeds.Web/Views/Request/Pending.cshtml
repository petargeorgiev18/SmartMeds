@model IEnumerable<RequestViewModel>

<h2>Pending Requests</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No pending requests.</div>
}
else
{
    <table class="table table-striped table-hover mt-3">
        <thead class="table-dark">
            <tr>
                <th>From</th>
                <th>To</th>
                <th>Medicine</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.FromHospitalName</td>
                    <td>@r.ToHospitalName</td>
                    <td>@r.MedicineName</td>
                    <td>
                        @switch (r.Status)
                        {
                            case RequestStatus.Pending:
                                <span class="badge bg-warning text-dark">Pending</span>
                                ;
                                break;
                            case RequestStatus.Completed:
                                <span class="badge bg-success">Approved</span>
                                ;
                                break;
                            case RequestStatus.Declined:
                                <span class="badge bg-danger">Rejected</span>
                                ;
                                break;
                        }
                    </td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="/Request/Details/@r.Id">Details</a>
                        <a class="btn btn-sm btn-warning" href="/Request/Edit/@r.Id">Edit</a>
                        <a class="btn btn-sm btn-danger" href="/Request/Delete/@r.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
