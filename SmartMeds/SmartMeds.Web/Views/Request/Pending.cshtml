@model IEnumerable<SmartMeds.Data.Entities.Request>

    <h2>Pending Requests</h2>

    @if (!Model.Any())
{
    <p>No pending requests.</p>
}
else
{
    <table class="table table-hover mt-3">
        <thead>
            <tr>
                <th>From</th>
                <th>To</th>
                <th>Medicine</th>
                <th>Quantity</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
        {
            <tr>
                <td>@r.FromHospital?.Name</td>
                <td>@r.ToHospital?.Name</td>
                <td>@r.Medicine?.Name</td>
                <td>@r.Quantity</td>
                <td>@r.Status</td>
            </tr>
        }
        </tbody>
    </table>
}
