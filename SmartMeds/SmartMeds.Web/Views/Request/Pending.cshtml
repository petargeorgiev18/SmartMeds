@model IEnumerable<SmartMeds.Web.Models.RequestViewModel>

<h2>Pending Requests</h2>

@if (!Model.Any())
{
    <p>No pending requests.</p>
}
else
{
    <table class="table table-hover mt-3">
        <thead>
            <tr>
                <th>From</th>
                <th>To</th>
                <th>Medicine</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.FromHospitalName</td>
                    <td>@r.ToHospitalName</td>
                    <td>@r.MedicineName</td>
                    <td>@r.Status</td>
                </tr>
            }
        </tbody>
    </table>
}